{
  "name": "@serpent/common-cli",
  "version": "1.1.7",
  "description": "通用的 cli 相关的函数",
  "main": "lib/cjs/debug.js",
  "module": "lib/debug.js",
  "keywords": [
    "cli",
    "common",
    "serpent"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "clean": "remove-all lib",
    "build:tsc": "tsc --sourceMap false",
    "build": "npm run clean && rollup -c",
    "build:watch": "npm run build -- -w",
    "prepare": "npm run lint && npm run test && npm run build && npm run build:tsc",
    "preversion": "npm run prepare"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=6.0.0"
  },
  "author": "Mora <qiuzhongleiabc@126.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/serpent"
  },
  "license": "MIT",
  "devDependencies": {
    "@serpent/dev-kits": "^1.1.0",
    "@serpent/rollup-kits": "^1.1.6",
    "@types/debug": "^4.1.5",
    "@types/node-fetch": "^2.5.7",
    "@types/semver": "^7.3.3",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "inquirer": "^7.3.3",
    "mora-scripts": "^1.7.5",
    "semver": "^7.3.2"
  },
  "dependencies": {
    "execa": "^4.0.3",
    "node-fetch": "^2.6.1",
    "@types/inquirer": "^7.3.1"
  },
  "node": {
    "node-fetch": "接口请求库，子项目可能也需要，不打包",
    "execa": "需要 ts 定义",
    "semver": "仓库太大，按需加载"
  },
  "peerDependencies": {
    "mora-scripts": "^1.7.5"
  },
  "jest": {
    "preset": "./node_modules/@serpent/dev-kits/jest.config.js",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true
    },
    "extends": [
      "./node_modules/@serpent/dev-kits/.eslintrc"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "dist",
    "lib",
    "coverage"
  ],
  "prettier": "@serpent/dev-kits",
  "gitHead": "6d07ca2e3193d8291fd1971a263c5bfa45579dfc"
}
